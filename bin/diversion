#!/usr/bin/env perl
use v5.18;
use FindBin;
use lib "$FindBin::Bin/../lib";

use Log::Dispatch;
use Log::Any::Adapter;

Log::Any::Adapter->set(
    'Dispatch',
    'dispatcher' => Log::Dispatch->new(
        outputs => [
            [ 'File', min_level => "debug", filename => "/tmp/diversion.log" ],
            [ 'Screen', min_level => "debug" ],
        ]
    )
);

use Diversion::App;
Diversion::App->run;
